{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@/core/*": ["src/core/*"],
        "@/frontend/*": ["src/frontend/*"],
        "@/editor/*": ["src/editor/*"],
        "@/shared/*": ["src/shared/*"]
      },
      "types": ["node"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx", 
      "src/**/*.scss",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }